<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <PreceptDef>
    <defName>AnimalDuel</defName>
    <label>animal duel</label>
    <tipLabelOverride>Prisoner/slave fighting an animal in a duel</tipLabelOverride>
    <description>A duel between a prisoner or a slave and an animal. The organizer will give a speech to excite the crowd, then the duelist will fight the animal until one of them falls or time runs out. If weapons are in the arena, the duelist will pick up and use them.</description>
    <issue>Ritual</issue>
    <impact>Medium</impact>
    <preceptClass>Precept_Ritual</preceptClass>
    <ritualPatternBase>AnimalDuel</ritualPatternBase>
    <iconPath>UI/Icons/AnimalDuel</iconPath>
    <visible>true</visible>
    <countsTowardsPreceptLimit>true</countsTowardsPreceptLimit>
    <selectionWeight>0.0</selectionWeight>
    <requiredMemes>
      <li>PainIsVirtue</li>
      <li>Cannibal</li>
      <li>Supremacist</li>
      <li>Raider</li>
    </requiredMemes>
  </PreceptDef>

  <RitualPatternDef>
    <defName>AnimalDuel</defName>
    <canStartAnytime>true</canStartAnytime>
    <ritualObligationTargetFilter>AnyRitualSpot</ritualObligationTargetFilter>
    <ritualBehavior>AnimalDuel</ritualBehavior>
    <alwaysStartAnytime>true</alwaysStartAnytime>
    <nameMaker>NamerRitualAnimalDuel</nameMaker>
    <ritualOnlyForIdeoMembers>false</ritualOnlyForIdeoMembers>
    <ritualOutcomeEffect>AnimalDuel</ritualOutcomeEffect>
    <tags Inherit="False" />
    <playsIdeoMusic>false</playsIdeoMusic>
  </RitualPatternDef>

</Defs>
