  <ThoughtDef>
    <defName>Nomadism_Wanted</defName>
    <thoughtClass>MorePrecepts.Thought_Situational_Precept_Nomadism_Wanted</thoughtClass>
    <workerClass>MorePrecepts.ThoughtWorker_Precept_Nomadism_Wanted</workerClass>
    <minExpectationForNegativeThought>Low</minExpectationForNegativeThought>
    <stages>
      <li>
        <label>new settlement</label>
        <description>I like being in a new place.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
      <li>
        <label>settlement</label>
        <visible>false</visible>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
      <li>
        <label>settlement</label>
