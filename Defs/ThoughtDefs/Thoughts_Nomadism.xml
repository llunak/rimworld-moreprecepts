<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Horrible -->

  <ThoughtDef>
    <defName>Nomadism_AbandonedSettlement_Horrible</defName>
    <durationDays>7</durationDays>
    <stages>
      <li>
        <label>abandoned settlement</label>
        <description>We abandoned a settlement. I hate leaving a place.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

