  <!-- Abhorred -->

  <ThoughtDef>
    <defName>Elderly_Abhorred</defName>
    <workerClass>MorePrecepts.ThoughtWorker_Precept_Elderly_Minus</workerClass>
    <thoughtClass>Thought_Situational</thoughtClass>
    <nullifyingTraits>
      <li>Kind</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Old person present</label>
        <description>We have an old person, who just eats our food and is useless.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>Two old people present</label>
        <description>We have two old people, they just eat our food and are useless.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>Several old people present</label>
        <description>We have several old people, why waste our resources on such useless people!</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Elderly_Abhorred_Self</defName>
