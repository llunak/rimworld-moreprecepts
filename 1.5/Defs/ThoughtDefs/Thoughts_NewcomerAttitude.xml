<Defs>

  <!-- Excited -->

  <ThoughtDef>
    <defName>MP_NewcomerAttitude_Excited</defName>
    <workerClass>MorePrecepts.ThoughtWorker_Precept_NewcomerAttitude_Excited</workerClass>
    <thoughtClass>MorePrecepts.Thought_NewcomerAttitude_Excited</thoughtClass>
    <stages>
      <li>
        <label>A recent newcomer</label>
        <description>There is somebody new in the colony. How interesting.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
      <li>
        <label>Nobody new in the colony</label>
        <description>It's been quite a while since somebody new interesting stayed at the colony.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
    <nullifiedIfNotColonist>true</nullifiedIfNotColonist>
  </ThoughtDef>

